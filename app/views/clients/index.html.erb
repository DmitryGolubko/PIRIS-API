<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>name</th>
      <th>patronymic</th>
      <th>birthdate</th>
      <th>sex</th>
      <th>passport_series</th>
      <th>passport_number</th>
      <th>place_of_issue</th>
      <th>date_of_issue</th>
      <th>id_number</th>
      <th>birth_place</th>
      <th>City</th>
      <th>address</th>
      <th>home_phone</th>
      <th>mobile_phone</th>
      <th>email</th>
      <th>civil_status</th>
      <th>country</th>
      <th>disabled</th>
      <th>retired</th>
      <th>salary</th>
      <th>military</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.surname %></td>
        <td><%= client.name %></td>
        <td><%= client.patronymic %></td>
        <td><%= client.birthdate %></td>
        <td><%= client.sex %></td>
        <td><%= client.passport_series %></td>
        <td><%= client.passport_number %></td>
        <td><%= client.place_of_issue %></td>
        <td><%= client.date_of_issue %></td>
        <td><%= client.id_number %></td>
        <td><%= client.birth_place %></td>
        <td><%= client.city.name %></td>
        <td><%= client.address %></td>
        <td><%= client.home_phone %></td>
        <td><%= client.mobile_phone %></td>
        <td><%= client.email %></td>
        <td><%= client.civil_status %></td>
        <td><%= client.country %></td>
        <td><%= client.disabled %></td>
        <td><%= client.retired %></td>
        <td><%= client.salary %></td>
        <td><%= client.military %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
